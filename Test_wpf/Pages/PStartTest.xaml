<Page x:Class="Test_wpf.Pages.PStartTest"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Test_wpf.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PStartTest">

    <Grid>
        <Label Content="Ласкаво просимо до тестування на різну тематику!" HorizontalAlignment="Center" Margin="0,43,0,0" VerticalAlignment="Top"/>
        <Label Content="Перед початком треба ввести своє ім'я та прізвище." HorizontalAlignment="Center" Margin="0,74,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxName" HorizontalAlignment="Center" Margin="0,139,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textBoxSurname" HorizontalAlignment="Center" Margin="0,162,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <Label Content="Ім'я:" HorizontalAlignment="Left" Margin="302,135,0,0" VerticalAlignment="Top"/>
        <Label Content="Прізвище:" HorizontalAlignment="Left" Margin="269,158,0,0" VerticalAlignment="Top"/>
        <Button Content="Почати!" HorizontalAlignment="Center" VerticalAlignment="Center"/>

    </Grid>
</Page>
